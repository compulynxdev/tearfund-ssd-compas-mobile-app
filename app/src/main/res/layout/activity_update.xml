<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.update.UpdateActivity">

    <include layout="@layout/layout_custom_toolbar"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_toolbar"
        android:layout_centerVertical="true"
        android:layout_margin="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_primary_color"
                android:text="@string/Master"
                android:id="@+id/btn_master"
                />
            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:background="@drawable/btn_primary_color"
                android:backgroundTint="@color/green"
                android:text="@string/CardHolders"
                android:id="@+id/btn_benficiaries"
                />
            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/red_dark2"
                android:visibility="gone"
                android:background="@drawable/btn_primary_color"
                android:text="@string/Topups"
                android:id="@+id/btn_topups"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>